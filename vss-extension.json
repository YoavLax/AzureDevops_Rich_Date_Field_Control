{
    "manifestVersion": 1,
    "id": "Rich-Date-Control",
    "version": "1.0.159",
    "name": "Give you the option to set date and mnipulate it",
    "scopes": [
        "vso.code_full",
        "vso.work_write"
    ],
    "description": "Add an href linked type to your form",
    "publisher": "AviHadad",
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [{
        "id": "Microsoft.VisualStudio.Services",
        "version": "[15.0,)"
    }],
    "tags": [
        "Work Item",
        "Work Item control",
        "Usability",
        "Date",
        "Range",
        "Limit"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "files": [{
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "dateIndex.html",
            "addressable": true
        }
    ],
    "categories": [
        "Azure Boards"
    ],
    "contributions": [{
        "id": "date",
        "description": "option to set date and mnipulate it",
        "type": "ms.vss-work-web.work-item-form-control",
        "targets": [
            "ms.vss-work-web.work-item-form"
        ],
        "properties": {
            "name": "Rich Date Field",
            "uri": "dateIndex.html",
            "inputs": [{
                "id": "dateValue",
                "name": "Date Field",
                "description": "This field get the Date value field of the work item",
                "type": "WorkItemField",
                "properties": {
                    "workItemFieldTypes": [
                        "DateTime"
                    ]
                },
                "validation": {
                    "isRequired": true
                }
            }, {
                "id": "pastLimitation",
                "name": "Min Range",
                "description": "(true/false) turn on and off the Min date Range",
                "type": "TextArea",
                "validation": {
                    "dataType": "String",
                    "isRequired": true
                }
            }, {
                "id": "backDateRef",
                "name": "Range Start Anchor",
                "description": "This field get the min Date value field",
                "type": "WorkItemField",
                "properties": {
                    "workItemFieldTypes": [
                        "DateTime"
                    ]
                },
                "validation": {
                    "isRequired": false
                }
            }, {
                "id": "backValue",
                "name": "Range Start Anchor stretch",
                "description": "(number) This field get max back days value",
                "type": "TextArea",
                "validation": {
                    "dataType": "Number",
                    "isRequired": false
                }
            }, {
                "id": "futureLimitation",
                "name": "Max Range",
                "description": "(true/false) turn on and off the future date limitation",
                "type": "TextArea",
                "validation": {
                    "dataType": "String",
                    "isRequired": true
                }
            }, {
                "id": "forwordDatRef",
                "name": "Range End Anchor",
                "description": "This field get the Max Date value field",
                "type": "WorkItemField",
                "properties": {
                    "workItemFieldTypes": [
                        "DateTime"
                    ]
                },
                "validation": {
                    "isRequired": false
                }
            }, {
                "id": "forwordValue",
                "name": "Range End Anchor stretch",
                "description": "(number) This field get max back days value",
                "type": "TextArea",
                "validation": {
                    "dataType": "Number",
                    "isRequired": false
                }
            }, {
                "id": "stateToFollow",
                "name": "Status Target",
                "description": "This field get the states you want to use, seperated with ',' ",
                "type": "TextArea",
                "validation": {
                    "dataType": "String",
                    "isRequired": false
                }
            }, {
                "id": "stateOfState",
                "name": "Status Condition",
                "description": "This field control wheter the state is or not the state you want to follow (Is/IsNot)",
                "type": "TextArea",
                "validation": {
                    "dataType": "String",
                    "isRequired": false
                }
            }]
        }
    }]
}